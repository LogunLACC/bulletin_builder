name: CI

on:
  push:
    branches: [ main, "release/**", "cherry/**", "chore/**" ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
          pip install pytest ruff

      - name: Lint with ruff
        run: |
          echo "Running ruff..."
          ruff check .

      - name: Run tests
        run: |
          pytest -q
name: CI
on:
  pull_request:
  push:
    branches: [ main, harden/**, fix/**, feat/** ]
jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with: { python-version: '3.11' }
      - run: pip install -e . || true
      - run: pip install -r requirements.txt || true
      - run: pip install pytest
      - name: Run pytest
        env: { PYTHONPATH: src }
        run: pytest -q
      - name: Email guard (exports only)
        run: |
          python tools/email_guard.py --changed-only \
            --include "exports/**" \
            --include "dist/email/**" \
            --exclude "user_drafts/**" \
            --exclude "tmp/**"
